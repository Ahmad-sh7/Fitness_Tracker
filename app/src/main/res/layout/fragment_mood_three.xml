<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sind Sie im Moment alleine?"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ja1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/teal_700"
        android:text="JA"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/nein1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/nein1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="NEIN"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ja1"
        app:layout_constraintTop_toTopOf="@+id/ja1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Wenn Sie an die Personen denken, die Sie gerade umgeben, inwiefern trifft folgende Aussage zu? Ich
mag diese Leute nicht!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ja1"
        tools:layout_editor_absoluteX="32dp" />

    <SeekBar
        android:id="@+id/seekBarID9"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:defaultFocusHighlightEnabled="false"
        android:max="100"
        android:scaleX="1"
        android:scaleY="2"
        android:scrollbarThumbHorizontal="?android:attr/listDivider"
        android:scrollbarThumbVertical="?attr/dividerVertical"
        android:thumb="?attr/dividerVertical"
        android:thumbOffset="0dp"
        android:thumbTint="#00ED0909"
        android:thumbTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/trifftvölligzu"
        app:layout_constraintStart_toStartOf="@+id/trifftüberhauptnichtzu"
        app:layout_constraintTop_toBottomOf="@+id/trifftüberhauptnichtzu" />

    <TextView
        android:id="@+id/trifftüberhauptnichtzu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="trifft überhaupt nicht zu"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/trifftvölligzu"
        android:layout_width="119dp"
        android:layout_height="18dp"
        android:text="trifft völlig zu"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/trifftüberhauptnichtzu" />

    <TextView
        android:id="@+id/progress9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0%"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/seekBarID9"
        app:layout_constraintStart_toStartOf="@+id/seekBarID9"
        app:layout_constraintTop_toTopOf="@+id/trifftüberhauptnichtzu" />

    <Button
        android:id="@+id/btn_next_mood_three"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#673FCA"
        android:text="Next>>"
        app:layout_constraintEnd_toEndOf="@+id/seekBarID9"
        app:layout_constraintStart_toStartOf="@+id/seekBarID9"
        app:layout_constraintTop_toBottomOf="@+id/seekBarID9" />

</androidx.constraintlayout.widget.ConstraintLayout>