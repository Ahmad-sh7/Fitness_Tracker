<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.MoodTwoFragment">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="haben sie seit der letzten abfrage eines oder mehrere negative ereignisse erlebt wie intensiv war das bedeutendste negative ereignis"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBarOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:defaultFocusHighlightEnabled="false"
        android:max="100"
        android:scaleX="1"
        android:scaleY="2"
        android:scrollbarThumbHorizontal="?android:attr/listDivider"
        android:scrollbarThumbVertical="?attr/dividerVertical"
        android:thumb="?attr/dividerVertical"
        android:thumbOffset="0dp"
        android:thumbTint="#00ED0909"
        android:thumbTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/sehrIntensiv"
        app:layout_constraintStart_toStartOf="@+id/keinEreignis"
        app:layout_constraintTop_toBottomOf="@+id/keinEreignis" />

    <TextView
        android:id="@+id/keinEreignis"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="kein Ereignis"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


    <TextView
        android:id="@+id/sehrIntensiv"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="sehr Intensiv"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="haben sie seit der letzten abfrage eines oder mehrere positive ereignisse erlebt wie intensiv war das bedeutendste positive ereignis"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/seekBarOne"
        app:layout_constraintStart_toStartOf="@+id/seekBarOne"
        app:layout_constraintTop_toBottomOf="@+id/seekBarOne" />

    <SeekBar
        android:id="@+id/seekBarTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:defaultFocusHighlightEnabled="false"
        android:max="100"
        android:scaleX="1"
        android:scaleY="2"
        android:scrollbarThumbHorizontal="?android:attr/listDivider"
        android:scrollbarThumbVertical="?attr/dividerVertical"
        android:thumb="?attr/dividerVertical"
        android:thumbOffset="0dp"
        android:thumbTint="#00ED0909"
        android:thumbTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/sehrIntensiv2"
        app:layout_constraintStart_toStartOf="@+id/keinEreignis2"
        app:layout_constraintTop_toBottomOf="@+id/keinEreignis2" />

    <TextView
        android:id="@+id/keinEreignis2"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="kein Ereignis"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/sehrIntensiv2"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="sehr Intensiv"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/progress7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/seekBarOne"
        app:layout_constraintStart_toStartOf="@+id/seekBarOne"
        app:layout_constraintTop_toTopOf="@+id/keinEreignis" />

    <TextView
        android:id="@+id/progress8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/seekBarTwo"
        app:layout_constraintStart_toStartOf="@+id/seekBarTwo"
        app:layout_constraintTop_toTopOf="@+id/keinEreignis2" />

    <Button
        android:id="@+id/btn_next"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#673FCA"
        android:text="Next>>"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>